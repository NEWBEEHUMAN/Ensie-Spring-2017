{% extends "base.html.twig" %}



{% block content %}
    <table style="width:93%;margin:auto;padding:auto;margin-top:60px;padding-top:20px;clear:left;text-align:center">
        <tr>
            <td style="text-align:center;">
                <h1>Ensie community</h1>
                <div>
                    <a href="/walloffame" style="text-decoration:none;color:black">full period</a> |
                    <a href="/walloffame/lastmonth" style="text-decoration:none;color:black">last month</a>
                </div>
                {% for user in users %}
                    {% if loop.index <200 and loop.index >0 %}
                        <div style="width:400px;height:auto;float:left;margin:20px;font-size:20px">
                            <table>
                                <tr>
                                    <td style="width:400px;text-align:center">
                                        <a href="{{ path('user_detail', {'userSlug': user.slug}) }}" class="profilepicture">
                                            <img src="{{ getProfileImage(user, 'small') }}" style="width: 80px;
                                                                                                        height: 80px;
                                                                                                        border-radius: 40px;
                                                                                                        -webkit-border-radius: 40px;
                                                                                                        -moz-border-radius: 40px;"/>
                                        </a>
                                    </td>
                                    <td style="vertical-align: bottom">
                                        {% if user.linkedInUrl is not empty %}
                                            <a href="{{ user.linkedInUrl }}" class="linkedin" target="_blank">
                                                <div style="width:25px;height:25px;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0" y="0" viewBox="0 0 49.4 49.7"
                                                         enable-background="new 0 0 49.4 49.7" xml:space="preserve"><path
                                                                d="M45.8 0H3.7C1.6 0 0 1.6 0 3.6v42.6c0 2 1.6 3.6 3.7 3.6h42.1c2 0 3.7-1.6 3.7-3.6V3.6C49.4 1.6 47.8 0 45.8 0zM15 41.6H7.5V19.2H15V41.6zM11.2 16.1L11.2 16.1c-2.6 0-4.2-1.7-4.2-3.9 0-2.2 1.7-3.9 4.2-3.9 2.6 0 4.1 1.7 4.2 3.9C15.5 14.4 13.9 16.1 11.2 16.1zM41.9 41.6h-7.5v-12c0-3-1.1-5.1-3.8-5.1 -2.1 0-3.3 1.4-3.8 2.7 -0.2 0.5-0.2 1.1-0.2 1.8v12.5h-7.5c0 0 0.1-20.4 0-22.5h7.5v3.2c1-1.5 2.8-3.7 6.7-3.7 4.9 0 8.6 3.2 8.6 10.1V41.6z"/></svg>
                                                </div>
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                            {% if user.isCompany %}
                                <h4><a href="{{ path('user_detail', {'userSlug': user.slug}) }}" style="color:black;text-decoration:none">{{ user.companyName }}</a></h4>
                               
                            {% else %}
                                <h4><a href="{{ path('user_detail', {'userSlug': user.slug}) }}" style="color:black;text-decoration:none">{{ user.formattedName }}</a></h4>
                                
                            {% endif %}
                        </div>
                    {% endif %}
					 {% endfor %}
        </td>
        </tr>
    </table>


{% endblock %}

