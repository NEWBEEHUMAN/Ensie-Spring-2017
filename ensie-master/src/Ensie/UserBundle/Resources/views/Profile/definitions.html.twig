{% extends "EnsieUserBundle:Profile:base_profile.html.twig" %}

{% block content %}
    {{ parent() }}
    <section class="admin">
        <div class="wrapper">
            <header>
                <a href="{{ path(app.request.attributes.get('_route')) }}{% if order == 'desc' %}?order=asc{% endif %}" class="sort">{{ simpleText('profile.stats_amount_of_views') }}</a>{{ simpleTextSonataAdminLink('profile.stats_amount_of_views') | raw }}
                <h1>{{ simpleText('profile.statistics_title') }}{{ simpleTextSonataAdminLink('profile.statistics_title')|raw }}</h1>
            </header>

            <div class="list statistics">
                {% for definition in definitions %}
                    <div class="item">
                        <div class="actions">
                            <a href="{{ path('profile_definition_edit', {'slug': definition.slug }) }}" class="edit">
