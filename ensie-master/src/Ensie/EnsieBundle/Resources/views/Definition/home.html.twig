    <section class="blocks white">
        <div class="wrapper">
            <h2>{{ simpleText('homepage.examples_title_part_1') }} {{ simpleTextSonataAdminLink('homepage.examples_title_part_1')|raw }}<br/>{{ simpleText('homepage.examples_title_part_2') }} {{ simpleTextSonataAdminLink('homepage.examples_title_part_2')|raw }}</h2>
            <div class="block third left">
                <h3>{{ simpleText('footer.new_definitions') }}{{ simpleTextSonataAdminLink('footer.new_definitions') | raw }}</h3>
                {{ render(controller('EnsieEnsieBundle:Definition:popularDefinitionList', {'maxResult': 5})) }}
            </div>

            <div class="block third left">
                <h3>{{ simpleText('footer.popular_writers') }}{{ simpleTextSonataAdminLink('footer.popular_writers') | raw }}</h3>
                {{ render(controller('EnsieUserBundle:User:popularUserList', {'maxResult': 5})) }}
