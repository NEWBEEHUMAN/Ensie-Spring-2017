            <div class="block third left">
                <h3>{{ simpleText('footer.new_writers') }}{{ simpleTextSonataAdminLink('footer.new_writers') | raw }}</h3>
                {{ render(controller('EnsieUserBundle:User:newUserList', {'maxResult': 5})) }}
            </div>
        </div>
    </section>

    <section class="blocks alternate quotes gray">
