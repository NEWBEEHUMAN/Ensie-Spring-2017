            <a href="{{ path('category', {'slug': subcategory.category.slug }) }}">{{ subcategory.category.title }}</a>
            <a href="#">></a>
            <a href="{{ path('subcategory', {'slug': subcategory.slug, 'category': subcategory.category.slug }) }}" class="active">{{ subcategory.title }}</a>
