<section class="subcategorydetailpage">
    <div class="wrapper">
        <div class="work-list">
            <div class="list">
                <h2>{{ subcategory.title }}</h2>

                <ul>
                    {% for definition in subcategory.definitions %}
                        <li><a href="{{ path('definition_definition', {'definitionSlug': definition.slug, 'userSlug': definition.ensieUser.slug}) }}">{{ definition.word }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
